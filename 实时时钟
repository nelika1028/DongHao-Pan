<!DOCTYPE HTML>
<meta charset="UTF-8"/>
<body>
	<p id="b">11</p>

<script type="text/javascript" charset="UTF-8">
	
/*
 * 显示当前时间
 */
(function (){
	setInterval(WriteTime,1000);
/*
 * 获得当前时间
 */
	function NowTime(){
		var nowtime = new Date();
		var year = nowtime.getFullYear();
		var month = nowtime.getMonth()+1;
		var date = nowtime.getDate();
		var day = nowtime.getDay();
		var hour = nowtime.getHours();
		var minute = nowtime.getMinutes();
		var second = nowtime.getSeconds();
		return [year,month,date,day,hour,minute,second];
	}	
	/*
	 * 数字转换汉字
	 */
	function NumToCN(){
		var cnweek = ["一","二","三","四","五","六","七"];
		 day = cnweek[NowTime()[3]-1];
	 	return day;
	}
	/*
	 * 补0
	 */
	function Complement(){
		if(NowTime()[1] < 10){
			var month = "0" + NowTime()[1]
		}
		else{month = NowTime()[1]};
		if(NowTime()[2] < 10){
			var date = "0" + NowTime()[2]
		}
		else{date = NowTime()[2]};
		if(NowTime()[4] < 10){
			var hour = "0" + NowTime()[4]
		}
		else{hour = NowTime()[4]};
		if(NowTime()[5] < 10){
			var minute = "0" + NowTime()[5]
		}
		else{minute = NowTime()[5]};
		if(NowTime()[6] < 10){
			var second = "0" + NowTime()[6]
		}
		else{second = NowTime()[6]}
		return [month,date,hour,minute,second];
	}
//	
//	/*
//	 * 输出时间
//	 */
	function WriteTime(){
		Complement();
		var b = document.getElementById("b");
		b.innerHTML = "当前时间" + NowTime()[0] + "年" + Complement()[0] + "月" + Complement()[1] + "日 星期" + NumToCN() + Complement()[2] + ":" + Complement()[3] + ":" + Complement()[4]
	}
	WriteTime()
}())
</script>
</HTML>
